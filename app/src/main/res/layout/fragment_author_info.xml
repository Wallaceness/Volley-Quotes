<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="quote"
            type="com.example.android.volleydemo.Quote" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthorInfoFragment">

    <TextView
        android:id="@+id/authorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{quote.author}"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/authorBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{quote.authorBirth}"
        app:layout_constraintBottom_toTopOf="@+id/profession"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authorName" />

    <TextView
        android:id="@+id/authorDeath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{quote.authorDeath}"
        app:layout_constraintBottom_toTopOf="@+id/nationality"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/authorBirth"
        app:layout_constraintTop_toBottomOf="@+id/authorName" />

    <TextView
        android:id="@+id/profession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{quote.profession}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/authorBirth"
        tools:layout_editor_absoluteY="95dp" />

    <TextView
        android:id="@+id/nationality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{quote.nationality}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profession"
        app:layout_constraintTop_toBottomOf="@id/authorDeath"
        tools:layout_editor_absoluteY="95dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>